<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="ac"
    tools:context=".CrearDocumentos">

    <TextView
        android:id="@+id/mevento"
        android:layout_width="171dp"
        android:layout_height="47dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="20dp"
        android:background="#C5E1A5"
        android:text="editar documento"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/btnext"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Documentos"
        android:layout_width="187dp"
        android:layout_height="46dp"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="28dp"
        android:text="CrearDocumentos"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etdocumento"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etdocumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Nombre Documento"
        app:helperText="Camporequerido"
        app:layout_constraintBottom_toTopOf="@+id/etdia"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etdia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="61dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Diaimportante"
        app:helperText="Camporequerido"
        app:layout_constraintBottom_toTopOf="@+id/edinya"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edinya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Nombre y Apellidos"
        app:helperText="Camporequerido"
        app:layout_constraintBottom_toTopOf="@+id/ediFecha"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ediFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Fecha"
        android:inputType="date"
        android:minHeight="48dp"
        app:helperText="Camporequerido"
        app:layout_constraintBottom_toTopOf="@+id/dispositivo"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Fecha" />

    <EditText
        android:id="@+id/dispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Dispositivo"
        app:helperText="Camporequerido"
        app:layout_constraintBottom_toTopOf="@+id/descripcion"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:text="descripcion"
        app:helperText="Camporequerido"
        app:layout_constraintBottom_toTopOf="@+id/btnext"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/btnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="16dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btndocu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="16dp"
        android:text="Borrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>